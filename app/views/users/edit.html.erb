<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%if @user.errors.any? %>
        <div id="errors">
          <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
        <div>Name</div>
        <div class="field"><%= f.text_field :name %></div>
        <div>Image</div>
        <%= f.file_field :profile_image, accept: "image/*" %>
        <div>Introduction</div>
        <div class="field"><%= f.text_area :introduction %></div>
        <input class="btn btn-success btn-3sm" type="submit" value="Update User">
      <% end %>
    </div>
  </div>
</div>